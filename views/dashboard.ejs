<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Dashboard</title>
  </head>
  <body>
    <h1>Dashboard</h1>
    <a href="/new-message">Create new message</a>
    <% if (membership) { %>
    <p>Hello you are a member</p>
    <div class="messages-container">
      <% if (locals.messages) {%> <% messages.forEach(message => { %>
      <div>
        <h3><%= message.title %></h3>
        <p><%= message.text %></p>
        <p><%= message.added %></p>
      </div>
      <% }); %> <% } %>
    </div>
    <% } %> <% if (!membership) { %>
    <p>Hello you are not a member</p>
    <div class="messages-container">
      <% if (locals.messages) {%> <% messages.forEach(message => { %>
      <div>
        <h3><%= message.title %></h3>
        <p><%= message.text %></p>
        <p><%= message.added %></p>
      </div>
      <% }); %> <% } %>
    </div>
    <% } %>
  </body>
</html>
